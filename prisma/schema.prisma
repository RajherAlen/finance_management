generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  fullName     String
  jobRole      String
  password     String
  username     String
  income       Int
  transactions Transaction[]
  savings      Savings[]
  loans        Loan[]
}

model Transaction {
  id          Int             @id @default(autoincrement())
  amount      Float
  description String
  category    String
  date        DateTime
  type        TransactionType
  user        User            @relation(fields: [userId], references: [id])
  userId      Int
  recurring   Boolean?
}

enum TransactionType {
  expense
  income
}

model Savings {
  id             Int      @id @default(autoincrement())
  goalAmount     Float
  currentlySaved Float
  name           String
  date           DateTime
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
}

model Loan {
  id           Int        @id @default(autoincrement())
  totalAmount  Float
  paid         Float      @default(0)
  interestRate Float
  startDate    DateTime   @default(now())
  endDate      DateTime
  status       LoanStatus @default(PENDING)
  description  String?
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("loans")
}

enum LoanStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}
